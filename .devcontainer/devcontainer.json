{
  "name": "Quarto Blog Development",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/rocker-org/devcontainer-features/quarto-cli:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "quarto.quarto",
        "ms-python.python",
        "redhat.vscode-yaml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },

  "postCreateCommand": "pip install --user jupyter nbformat nbclient",

  "forwardPorts": [4200],

  "portsAttributes": {
    "4200": {
      "label": "Quarto Preview",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode"
}
